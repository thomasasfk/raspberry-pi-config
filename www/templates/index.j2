{% extends "base.j2" %}

{% block title %}Services{% endblock %}

{% block favicon %}
    <link rel="icon" type="image/x-icon" href="https://assets.raspberrypi.com/favicon.png">
{% endblock %}

{% block content %}
<h1 class="text-2xl font-bold text-center mb-6">Services</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {% for name, service in services.items() %}
    <a href="http://{{ service.host }}:{{ service.port }}{{ service.path }}"
       class="bg-[var(--card-bg)] rounded-lg p-4 transition hover:-translate-y-1 hover:shadow-md">
        <div class="flex items-center gap-3 mb-2">
            <img src="{{ service.icon }}" alt="{{ name }}" class="w-6 h-6">
            <span class="text-lg font-semibold">{{ name }}</span>
        </div>
        <div class="text-[var(--text-secondary)] mb-3">{{ service.desc }}</div>
        <div class="text-[var(--accent)] mt-2">Open {{ name }} â†’</div>
    </a>
    {% endfor %}
</div>
{% endblock %}